<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:src="@drawable/superman"
            android:scaleType="fitXY"
            android:id="@+id/profileIV"
            />
        <TextView
            android:id="@+id/nameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/profileIV"
            android:text="Name:"
            android:textSize="20dp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/nameTv"
            android:text="Super MAn"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/gendrtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/profileIV"
            android:layout_below="@+id/nameTv"
            android:text="Gender:"
            android:textSize="20dp"
            android:textColor="@color/black"

        />
        <TextView
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/gendrtv"
            android:layout_below="@+id/nameTv"
            android:text="Male"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"
        />
        <TextView
            android:id="@+id/dobTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/profileIV"
            android:layout_below="@+id/gendrtv"
            android:text="Date of Birth:"
            android:textSize="20dp"
            android:textColor="@color/black"
        />
        <TextView
            android:id="@+id/dob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/dobTv"
            android:text="12/09/999"
            android:layout_below="@+id/gendrtv"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"
        />
        <TextView
            android:id="@+id/emailTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/profileIV"
            android:layout_below="@+id/dobTv"
            android:text="Email:"
            android:textSize="20dp"
            android:textColor="@color/black"
        />
        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/emailTV"
            android:layout_below="@+id/dobTv"
            android:text="superman @gmail.com"
            android:textSize="15dp"
            android:layout_margin="3dp"
            android:textColor="@color/black"
        />
        <TextView
            android:id="@+id/phoneTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/profileIV"
            android:layout_below="@id/email"
            android:text="Phone:"
            android:textSize="20dp"
            android:textColor="@color/black"
        />
        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/phoneTV"
            android:layout_below="@id/email"
            android:text="123456789"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"
        />
        <TextView
            android:id="@+id/countryTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/profileIV"
            android:layout_below="@id/phone"
            android:text="Country:"
            android:textSize="20dp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/countryTv"
            android:layout_below="@id/phone"
            android:text="USa"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:id="@+id/cityTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/profileIV"
            android:layout_below="@id/country"
            android:text="City:"
            android:textSize="20dp"
            android:textColor="@color/black"
        />
        <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/cityTv"
            android:layout_below="@id/country"
            android:text="NewYork"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"
            />
    </RelativeLayout>
</androidx.cardview.widget.CardView>